<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="50dp"
        android:background="@color/black"
        tools:context=".ui.ExtenstionFragment">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_service"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:text="Service demo"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bg_rounded_border"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_work_manager"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:text="WrokManager demo"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bg_rounded_border"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_solid"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:text="Solid demo"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bg_rounded_border"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_thread"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:text="Thread demo"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bg_rounded_border"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_rx"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Rx demo"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bg_rounded_border"/>

    </LinearLayout>
</layout>